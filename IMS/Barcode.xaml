<Window x:Class="Inventory_managment.Barcode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scan Barcode" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Barcode Number:" FontSize="16" Margin="0,0,0,10" />
            <TextBox x:Name="txtBarcode" Width="200" Height="30" Margin="0,0,0,10" />
            <Button Content="Search" Width="100" Height="30" Click="SearchBarcode_Click" />
        </StackPanel>
    </Grid>
</Window>
